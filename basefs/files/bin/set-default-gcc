#!/usr/bin/env bash

ver=$1

if [[ -z "${ver}" ]] ; then
    echo "Usage: $0 [4.9 | 5.5 | 6.4 | 7.2 ]"
    exit 1
fi

rm -f /usr/bin/gcc
rm -f /usr/bin/g++

rm -f /usr/bin/cc
rm -f /usr/bin/c++

rm -f /usr/bin/cpp

ln -s gcc-$ver /usr/bin/gcc
ln -s gcc-$ver /usr/bin/cc

ln -s g++-$ver /usr/bin/g++
ln -s g++-$ver /usr/bin/c++

ln -s cpp-$ver /usr/bin/cpp
